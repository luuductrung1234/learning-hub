@model ProfilesModel;

@{
   ViewData["Title"] = "Profiles";
}

<h2>Profiles</h2>

<div class="card">
   <div class="card-body">
      <h5 class="card-title text-primary">Information - <span class="card-subtitle mb-2 text-muted">account information</span></h5>
      <p><strong>UserName: </strong> @Model.UserName</p>
      <p><strong>Email: </strong> @Model.Email</p>
   </div>
</div>
<br />
<div class="card">
   <div class="card-body">
      <h5 class="card-title text-primary">Change Password</h5>
      <form asp-action="ChangePassword" method="post" class="form-horizontal">
         <input asp-for="Email" type="hidden" />
         <div class="form-group">
            <label asp-for="Password" class="col-sm-2"></label>
            <div class="col-sm-10">
               <input asp-for="Password" class="form-control" />
            </div>
         </div>
         <div class="form-group">
            <label asp-for="NewPassword" class="col-sm-2"></label>
            <div class="col-sm-10">
               <input asp-for="NewPassword" class="form-control" />
            </div>
         </div>
         <div class="form-group">
            <label asp-for="ConfirmPassword" class="col-sm-2"></label>
            <div class="col-sm-10">
               <input asp-for="ConfirmPassword" class="form-control" />
            </div>
         </div>
         <button type="submit" class="btn btn-primary">Submit</button>
         <div asp-validation-summary="All"></div>
      </form>
   </div>
</div>
<br />
<div class="card">
   <div class="card-body">
      <h5 class="card-title text-danger">Danger Zone</h5>
      <a class="btn btn-danger my-2 my-sm-0" asp-area="" asp-controller="Auth" asp-action="DeleteAccount">Delete Account</a>
   </div>
</div>
